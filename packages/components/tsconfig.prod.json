{
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "api/*": ["api.ts"],
      "declarations/*": ["lib/declarations.ts"],
      "hooks/*": ["hooks/*"],
      "lib/*": ["lib/*"],
      "logger/*": ["logger.ts"],
      "utils/*": ["utils.ts"]
    },
    "rootDir": "./src"
  },
  "extends": "./tsconfig.json",
  "exclude": ["src/stories", "src/lib/**/**/stories"],
  "include": ["src/**/*"]
}
