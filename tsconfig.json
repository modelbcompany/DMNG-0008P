{
  "compileOnSave": true,
  "compilerOptions": {
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "checkJs": false,
    "baseUrl": "./src",
    "declaration": true,
    "declarationMap": false,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react",
    "importHelpers": true,
    "isolatedModules": false,
    "lib": ["dom", "esnext"],
    "module": "esnext",
    "moduleResolution": "node",
    "noLib": false,
    "noEmit": false,
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "./dist",
    "paths": {
      "definitions/*": ["definitions/*"],
      "hooks/*": ["hooks/*"],
      "lib/*": ["lib/*"],
      "logger": ["logger.ts"],
      "storybook/*": [".storybook/*"],
      "utils/*": ["utils/*"]
    },
    "preserveConstEnums": true,
    "removeComments": false,
    "rootDir": "./src",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "sourceMap": false,
    "suppressImplicitAnyIndexErrors": true,
    "strict": true,
    "target": "esnext"
  },
  "exclude": [
    "__tests__",
    "app",
    "build",
    "dist",
    "node_modules",
    "jest.config.js",
    "jest.setup.js"
  ],
  "include": ["api/**/*"]
}
