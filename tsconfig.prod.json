{
  "compilerOptions": {
    "baseUrl": "./src",
    "declaration": false,
    "declarationMap": false,
    "noEmit": true,
    "outDir": "./dist",
    "paths": {
      "definitions/*": ["definitions/*"],
      "hooks/*": ["hooks/*"],
      "lib/*": ["lib/*"],
      "logger": ["logger.ts"],
      "utils/*": ["utils/*"]
    },
    "rootDir": "./src"
  },
  "exclude": [
    "__tests__",
    "app",
    "build",
    "dist",
    "node_modules",
    "src/stories",
    "jest.config.js",
    "jest.setup.js"
  ]
}
